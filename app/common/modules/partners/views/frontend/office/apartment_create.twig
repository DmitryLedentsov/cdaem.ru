                        </select>#}

                        <input type="text" name="ApartmentForm[total_area]" placeholder="Общая площадь м2" class="step-input" />

                    </div>
                    <div class="step-column-33">
                        <select name="ApartmentForm[total_rooms]" required class="custom-select">
                            <option value="">Количество комнат</option>
                            {% for id, value in rooms %}
                                <option value="{{ id }}">{{ value }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="step-column-33">
                        <select name="ApartmentForm[sleeping_place]" required class="custom-select">
                            <option value="">Кол-во спальных мест</option>
                            {% for id, value in sleepingPlaces %}
                                <option value="{{ id }}">{{ value }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="step-line">
                    <div class="step-column-33">
                        <select name="ApartmentForm[beds]" required class="custom-select">
                            <option value="">Количество кроватей</option>
                            {% for id, value in beds %}
                                <option value="{{ id }}">{{ value }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="step-column-33">
                        <select name="ApartmentForm[remont]" required class="custom-select">
                            <option value="">Ремонт</option>
                            {% for id, value in remont %}
                                <option value="{{ id }}">{{ value }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="step-column-33">
                        <input type="text" name="ApartmentForm[floor]" placeholder="Этаж" class="step-input" />
                    </div>
                </div>
                <div class="step-column-100">
                    <textarea name="ApartmentForm[description]" class="step-textarea" placeholder="Описание жилья"></textarea>
                </div>
            </div>
        </div>

        <div class="main-account-inner mt-5">
            <div class="section-head section-head-between">
                <h2 class="section-header">Добавить фотографии</h2>
                <div class="steps-list">
                    <div class="steps-list-item steps-list-item-active">1</div>
                    <div class="steps-list-item steps-list-item-active">2</div>
