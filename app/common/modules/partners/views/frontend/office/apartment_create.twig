{% extends "@common/modules/office/views/frontend/layouts/main.twig" %}

{% block title %}Создать объявления | Сдаём.ру{% endblock %}

{% block bodyClass %}l-account p-create-adv{% endblock %}
{% block contentWrapperClass %}{% endblock %}

{% block breadcrumbs %}
