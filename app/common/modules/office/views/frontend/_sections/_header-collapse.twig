<header class="header-collapse">
    <div class="container-fluid">
        <a class="header-logo" href="/">
            <img src="/_new/images//account/img-logo-account.svg" alt="logo">
        </a>
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#main-menu" aria-label="navbar-toggle">
            <span></span>
            <span></span>
        </button>
        <nav class="main-menu collapse" id="main-menu">
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="active" href="#">Доска объявлений</a>
                </li>
                <li class="nav-item">
                    <a href="#">Добавить объявление</a>
                </li>
                <li class="nav-item">
                    <a href="#">Быстро снять</a>
                </li>
                <li class="nav-item">
                    <a href="#">Помощь</a>
                </li>
            </ul>
        </nav>
        <div class="header-message">
            <img src="/_new/images//account/icon-lk-email.svg" alt="">
            <span class="header-message-value">--</span>
            <div class="message-info">
                <div class="message-info-header">Уведомления</div>
                <div class="list-message-info">
                    <a href="{{ path(['/partners/reservation/total-bid']) }}" class="list-message-info-item">
                        <span class="list-message-info-name">Заявки</span>
                        <span class="list-message-info-value">--</span>
                    </a>
                    <a href="{{ path(['/partners/reservation/reservations']) }}" class="list-message-info-item">
                        <span class="list-message-info-name">Бронь</span>
                        <span class="list-message-info-value">--</span>
                    </a>
                    <a href="{{ path(['/messages/default/index']) }}" class="list-message-info-item">
                        <span class="list-message-info-name">Сообщения</span>
                        <span class="list-message-info-value">--</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="user-info">
            <div class="user-info-avatar">
                <img src="/_new/images//account/img-avatar.png" alt="">
            </div>
            <div class="user-info-data">
                <div class="user-info-name">Власов Дмитрий</div>
                <div class="user-info-balance">Баланс: <span class="user-info-balance-value">4000 рублей</span></div>
            </div>
            <div class="user-change">
                <img src="/_new/images//account/icon-change.svg" alt="">
            </div>
            <!-- settings -->
            <div class="user-settings">
                <div class="user-settings-header">Мой профиль</div>
                <div class="user-settings-list">
                    <a class="user-settings-item" href="{{ path(['/office/default/orders']) }}" {{ app.request.pathInfo == 'office/orders' ? 'class="active"' : '' }}>
                        Мои покупки
                    </a>
                    <a class="user-settings-item" href="{{ path(['/partners/office/apartments']) }}"
                       {% if app.request.pathInfo == 'office/apartments' and strpos(app.request.pathInfo, 'type=available') == 0 %}class="active"{% endif %}>
                        Мои объявления
                    </a>
                    <a class="user-settings-item" href="{{ path(['/office/default/services']) }}" {{ app.request.pathInfo == 'office/services' ? 'class="active"' : '' }}>
                        Услуги
                    </a>
                    <a class="user-settings-item" href="{{ path({0 : '/partners/office/calendar'}) }}" {{ app.request.pathInfo == 'office/calendar' ? 'class="active"' : '' }}>
                        Календарь
                    </a>
                    <a class="user-settings-item" href="{{ path(['/office/default/top-slider']) }}" {{ app.request.pathInfo == 'office/top-slider-history' ? 'class="active"' : '' }}>
                        Бегущая строка
                    </a>
                    <a href="{{ path(['/office/default/bookmark']) }}" class="user-settings-item">Избранное</a>
                    <a href="{{ path(['/office/default/blacklist']) }}" class="user-settings-item">Черный список</a>
                    <a href="#" class="user-settings-item">Безопасная сделка</a>
                    <a href="#" class="user-settings-item">Настройки</a>
                    {# <a href="#" class="user-settings-item">Оплата</a> #}
                </div>
                <a href="{{ path(['/users/user/logout']) }}" class="user-settings-out">
                    <img src="/_new/images//account/icon-logout.svg" alt="" />
                    <span class="user-settings-out-text">Выйти</span>
                </a>
            </div>
        </div>
    </div>
</header>

