{% extends "@common/modules/site/views/layouts/main.twig" %}

{% block bodyClass %}l-base p-home{% endblock %}

{% block title %}{{ metaData['meta_title'] }}{% endblock %}

{% block seo %}
    {% include '@common/modules/site/views/_modules/_seo.twig' with {
        'title': metaData['meta_title'],
        'description': metaData['meta_description'],
        'keywords': metaData['meta_keywords'],
    } %}
{% endblock %}

{% block content %}

    {{ use('common/modules/site/assets/HomeAsset') }}
    {{ register_home_asset() }}

    {{ this.render("@common/modules/site/views/default/home/_sections/_search-form.twig", {'searchModel': searchModel}) | raw }}
    {{ this.render("@common/modules/site/views/default/home/_sections/_faq.twig") | raw }}
    {{ this.render("@common/modules/site/views/default/home/_sections/_cities.twig") | raw }}
    {{ this.render("@common/modules/site/views/default/home/_sections/_articles.twig", {'articles': articles}) | raw }}

{% endblock content %}