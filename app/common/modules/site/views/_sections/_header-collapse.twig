<header class="header-collapse">
    <div class="container-fluid">
        <a class="header-logo" href="/">
            <img src="/_new/images/logo-dark.svg" alt="logo">
        </a>
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#main-menu" aria-label="navbar-toggle">
            <span></span>
            <span></span>
        </button>
        <nav class="main-menu collapse" id="main-menu">
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="" href="{{ path(['/partners/office/create']) }}">
                        Добавить объявление
                    </a>
                </li>
                <li class="nav-item">
                    <a class="{{ this.context.action.id == 'help' ? 'active' : '' }}" href="{{ path(['/helpdesk/default/help']) }}">
                        Помощь
                    </a>
                </li>
                <li class="nav-item">
                    <a class="{{ this.context.action.id == 'signup' ? 'active' : '' }}" href="{{ path(['/users/guest/signup']) }}" {{ this.context.action.id == 'signup' ? '' : ' data-toggle="modal" data-target="#signUp"' }}>
                        Регистрация
                    </a>
                </li>
            </ul>
            {% if app.user.getIsGuest() %}
                <a href="{{ path(['/users/guest/login']) }}" class="btn btn-warning btn-special btn-sign-in" {{ this.context.action.id == 'login' ? '' : ' data-toggle="modal" data-target="#signIn"' }}>
                    Вход
                </a>
            {% endif %}
            {% if app.user.getIsGuest() == false %}
                <a href="{{ path(['/office/default/index']) }}">Кабинет</a>
                &nbsp; | &nbsp;
                <a href="{{ path(['/users/user/logout']) }}">Выход</a>
            {% endif %}
        </nav>
    </div>
</header>

{{ this.render("@common/modules/site/views/_sections/_header-modals.twig") | raw }}