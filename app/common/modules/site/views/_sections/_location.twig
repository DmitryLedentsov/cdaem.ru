<button id="locationSelection" class="location" data-toggle="modal" data-target="#modalLocation"></button>

<div class="modal modal-location fade" id="modalLocation" tabindex="-1" role="dialog" aria-labelledby="modalLocationLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-window" role="document">
        <div class="modal-content modal-item">
            <div class="modal-header modal-top">
                <h4 class="modal-title modal-header-title" id="modalLocationLabel">Я нахожусь в городе:</h4>
                <button type="button" class="close btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label class="modal-location-label">
                    <input type="text" class="modal-location-city input-field" placeholder="Введите город">
                </label>
                <h5 class="modal-subtitle">Популярные города:</h5>
                <div class="modal-location-container">
                    <div class="modal-location-content">
                        <div class="modal-city">
                            <ul class="modal-city-list"></ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-center pb-0">
                <button type="button" class="btn btn-warning btn-special mt-3" data-dismiss="modal">Сохранить</button>
            </div>
        </div>
    </div>
</div>
